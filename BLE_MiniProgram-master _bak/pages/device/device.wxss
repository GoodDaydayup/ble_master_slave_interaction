page {
  width:100vw;
  height:100vh;
  background-color: #f8f8f8;
}
.container {
  width:100%;
  height:90%;
  padding: 30rpx;
  align-items: left;
  overflow-y: scroll
}
.input {
  margin-top:3px;
  width: 100%;
  border: 1px solid lightgray;
  border-radius: 6px;
}
.button {
  position: fixed;
  align-items: left;
  width: 690rpx;
  bottom: 30rpx;
}
.black{
  padding: 5rpx;
  align-items: left;
  display: block;
  width: 100%;
  clear: both;
}
.left {
  float:left;
  width:40%;
}
.right {
  float:left;
  margin-left:20rpx;
  margin-top:12rpx;
}
